@model News
@{
    ViewData["Title"] = "Create";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <h2>Xeber Yerlesdir </h2>
                    </div>
                </div>
                <form method="post" class="mt-4" enctype="multipart/form-data">

                    <div class="form-group">
                        <label asp-for="Photo">Elanin Shekli</label>
                        <input asp-for="Photo" accept="image/*" class="form-control" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Title">Basliq</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ShortInfo">Qisa Aciqlama</label>
                        <input asp-for="ShortInfo" class="form-control" />
                        <span asp-validation-for="ShortInfo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MainInfo">Xeberin Metni</label>
                        <textarea rows="7" style="width:100%;" asp-for="MainInfo"></textarea>
                        <span asp-validation-for="MainInfo" class="text-danger"></span>
                    </div>

                    <input type="submit" class="btn btn-success btn-block btn-lg" value="Yarat" />
                </form>
            </div>
        </div>

    </div>

</div>

